@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista kontaktów</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Contact" asp-action="Create">Dodaj Kontakt</a>
<a class="btn btn-primary" asp-area="" asp-controller="Contact" asp-action="CreateApi">Dodaj Kontakt API</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model[0].Email)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model[0].Priority)
                </th >
                <th class="text-white">
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="@(item.Value.Name.EndsWith("a")? "text-primary":"text-secondary text-white")">
                        @item.Value.Name
                    </td>
                    <td class="text-white">
                        @item.Value.Email
                    </td>
                    <td class="text-white">
                        @item.Value.Priority
                    </td>
                    <td class="text-white">
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Key>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}