@model Dictionary<int, Travel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista wycieczek</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Travel" asp-action="Create">Dodaj Wycieczke</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th class="text-white">
                    Nazwa Wycieczki
                </th>
                <th class="text-white">
                    Przewodnik
                </th>
                <th class="text-white">
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="@(item.Value.Name.EndsWith("a")? "text-primary":"text-secondary text-white")">
                        @item.Value.Name
                    </td>
                    <td class="text-white">
                        @item.Value.Guide
                    </td>
                    <td class="text-white">
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Key>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}